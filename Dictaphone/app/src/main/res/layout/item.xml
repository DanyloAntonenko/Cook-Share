<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/record_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/record_background"

        >

        <RelativeLayout
            android:id="@+id/header_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/record_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RecordName"
                android:textSize="20dp"
                android:layout_margin="8dp"
                android:textColor="@android:color/background_dark"
                />

            <TextView
                android:id="@+id/record_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:text="21.08.19" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/body_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:padding="2dp"
            >
            <Button
                android:id="@+id/play_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/play_record_button"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"

                />
            <Button
                android:id="@+id/delete_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/circle_close"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"

                />

            <SeekBar
                android:id="@+id/sound_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:thumbTint="#cd88a9"
                android:maxHeight="3dp"
                android:maxWidth="3dp"
                android:progressDrawable="@drawable/seekbar_bgr"
                android:visibility="invisible"

                />
            <TextView
                android:id="@+id/record_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                />

        </RelativeLayout>


    </LinearLayout>

</LinearLayout>